#!/usr/bin/env bash

set -eo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

function install_version() {
  local version=$1
  local install_path=$2

  local platform
  platform=$(get_platform)

  local tar_url
  tar_url=$(get_tar_url "$version" "$platform")

  local tmpdir
  tmpdir=$(get_temp_dir)
  trap "rm -rf $tmpdir" EXIT

  (
    mkdir -p "$install_path/bin"

    echo "Installing pbkit v$version"
    curl -sSfLo "$tmpdir/pbkit.tar" "$tar_url" || fail "Couldn't download the pbkit from $tar_url"
    tar xf "$tmpdir/pbkit.tar" -C "$install_path/bin"

    chmod +x "$install_path/bin/pb"
    chmod +x "$install_path/bin/pollapo"
  ) || (rm -rf "$install_path"; exit 1)
}

if [ "$ASDF_INSTALL_TYPE" != "version" ]; then
  fail "asdf-pbkit currently supports release install only"
fi

install_version "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
